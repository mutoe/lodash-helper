@import 'variables'
@import 'reset'

html
body
  height 100%

body
  color $color-text-primary
  font-size $font-size-base
  font-family 'Helvetica Neue', Helvetica, Arial, 'PingFang SC', 'Hiragino Sans GB', 'Heiti SC', 'Microsoft YaHei', 'WenQuanYi Micro Hei', sans-serif
  line-height 1.41

a
  color inherit
  text-decoration none

  &:focus
    outline none

a:not(.noline)
  position relative

  &::after
    position absolute
    bottom 0
    left 0
    display block
    width 100%
    height 1px
    background-color rgba($color-text-primary, 0.2)
    content ''
    transition all 0.3s
    transform rotateY(0)

  &:hover::after
  &:active::after
  &:focus::after
    background-color rgba($color-text-primary, 0.9)
    transform rotateY(180deg)
